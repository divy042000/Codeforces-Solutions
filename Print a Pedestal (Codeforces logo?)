#include<bits/stdc++.h>
using namespace std;

int main(){
#define int long long int
#define loop(a,b) for(int i=a;i<b;i++)
#define loop1(a,b) for(int i=a;i>=b;i--)
#define mp(a,b) make_pair(a,b)
#define pb(a) push_back(a)
ios_base::sync_with_stdio(false); cin.tie(NULL);
int t,n;
cin>>t;
while(t--){
int n;
cin>>n;
int k=n/3;
int rem=n%3;
if((rem)==0)
{
    cout<<k<<" "<<k+1<<" "<<k-1<<endl;
}
else if((rem)==1)
{
    cout<<k<<" "<<k+2<<" "<<k-1<<endl;
}
else if((rem)==2)
{
    cout<<k+1<<" "<<k+2<<" "<<k-1<<" "<<endl;
}
}
return 0;
}
